            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="letPlayB" layoutX="201.0" layoutY="301.0" mnemonicParsing="false" onAction="#startButtonClicked" prefHeight="30.0" prefWidth="198.0" text="Lets Play!">
